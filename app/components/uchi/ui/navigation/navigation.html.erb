<ul class="space-y-2 font-medium">
  <% items.each do |item| %>
    <li>
      <%= link_to(item[:path], :class => "flex items-center p-2 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group") do %>
        <span class="ms-3"><%= item[:label] %></span>
      <% end %>
    </li>
  <% end %>
</ul>
