<% attachment = field.value(record) %>

<% if attachment.attached? %>
  <%= render Uchi::Flowbite::Link.new(href: Rails.application.routes.url_helpers.rails_blob_path(attachment, only_path: true)) do %>
    <%= attachment.filename %>
  <% end %>
<% else %>
  <%= render(Uchi::Ui::NoValue.new) %>
<% end %>
